word = list(input(u'Игрок №1, введите ваше слово'))
print u'количество букв в загаданном слове:', len(word)
#print (len(word) * '*')
word_shadow = []
len(word_shadow) == len(word)
word_shadow = len(word) * '*'
print word_shadow #здесь закончилось определение слова и начинается определение букв
word_shadow = list(word_shadow)
count = 0

while len(word_shadow):
  a = input(u'Попробуйте угадать букву')
  
  if a in word:
    ind = word.index(a)#индекс находится !!! Только первое вхождение
    ind_shadow = ind #у тени тот же индекс
    del word_shadow[ind_shadow]
    word_shadow.insert(ind_shadow, a)#вставляет букву в нужный индекс
    print word_shadow #цикл не кончается!!!!!!!
    if word_shadow == word:
      print u'Вы победили!'
      break
  
  else:
    while count <= 6:
      count += 1
      print u'Неверно. Осталось попыток:', 6 - count
      break
    if count == 6:
      print u'увы'
      break
